<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="">
        <Preference
            android:id="@+id/pref_root_directory"
            android:summary=""
            android:key="pref_root_directory"
            app:iconSpaceReserved="false"
            android:title="@string/pref_root_directory_title"/>

        <CheckBoxPreference
            android:id="@+id/pref_staggered_layout"
            android:summary="Show note list with a staggered layout"
            android:key="pref_staggered_layout"
            app:iconSpaceReserved="false"
            android:title="Staggered Layout"
            android:defaultValue="false"
            />

        <ListPreference
            android:key="pref_bucket_grid"
            android:title="Select buckets grid size"
            android:summary="%s"
            android:entries="@array/pref_bucket_grid_entries"
            android:entryValues="@array/pref_bucket_grid_entries_values"
            app:iconSpaceReserved="false"
            android:defaultValue="1" />

        <!--CheckBoxPreference
            android:id="@+id/pref_bucket_label"
            android:key="pref_bucket_label"
            app:iconSpaceReserved="false"
            android:title="Show bucket label"
            android:defaultValue="true"
            /-->

        <!--Preference
            android:id="@+id/pref_default_notebook"
            android:summary=""
            android:key="pref_default_notebook"
            android:title="@string/pref_default_notebook"/-->

        <ListPreference
            android:key="pref_note_order"
            android:title="Select note order"
            android:summary="%s"
            android:entries="@array/pref_note_order_entries"
            android:entryValues="@array/pref_note_entries_values"
            app:iconSpaceReserved="false"
            android:defaultValue="0" />

        <ListPreference
            android:key="pref_note_editor_theme"
            android:title="Select editor theme"
            android:summary="%s"
            android:entries="@array/pref_note_editor_theme"
            android:entryValues="@array/pref_note_editor_theme"
            app:iconSpaceReserved="false"
            android:defaultValue="dark" />

        <ListPreference
            android:key="pref_note_preview_theme"
            android:title="Select note preview theme"
            android:summary="%s"
            android:entries="@array/pref_note_preview_theme"
            android:entryValues="@array/pref_note_preview_theme"
            app:iconSpaceReserved="false"
            android:defaultValue="light" />
    </PreferenceCategory>

</PreferenceScreen>